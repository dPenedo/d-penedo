---
import basqueMediaCapt from "/public/captura-basquemedia.png";
import scrapingCapt from "/public/captura-scraping.png";
import pomodoroCapt from "/public/captura-pomodoro.png";
import martzianosCapt from "/public/captura-martzianos.png";
import albertCapt from "/public/captura-alber.png";
import sociometroCapt from "/public/captura-sociometro.png";
import escuelaDeColumnaCapt from "public/captura-escuela-col.webp";
import doggyCapt from "/public/captura-doggy.png";
import aprovechappCapt from "/public/captura-aprovechapp.png";
import tuveterinariaCapt from "/public/captura-tuveterinaria.png";
import chronoscriptCapt from "/public/captura-chronoscript.webp";
import todolistCapt from "/public/captura-todolist.webp";
import tiendaCeramica from "/public/captura-tienda-ceramica.png";
import cityBike from "/public/captura-citybike.png";
import matafuegos from "/public/captura-matafuegos1.png";
import Project from "./Project.astro";
---

<section class="mt-16">
	<h2 class="title mb-4 text-2xl"><span class="text-accent">#</span> Projects</h2>

	<div>
		<h2 class="title mb-4 text-xl"><span class="text-accent">##</span> Data Projects</h2>
		<!-- <h2 class="title mb-4 text-xl"><a class="cactus-link" href="/data"><span class="text-accent">##</span> Data Projects</a></h2> -->

		<Project
			img={basqueMediaCapt}
			title="Basque Media Scraper — Multi-Source News Data Pipeline"
			repoLink="https://github.com/dPenedo/basque_media"
		>
			<p>
				A <b class="text-quote">Python</b>-based web scraping system that collects headlines from
				<b class="text-quote">13 Basque and Spanish media outlets</b>, storing them in a
				<b class="text-quote">PostgreSQL</b> database with automatic duplicate prevention.
			</p>
			<p>
				The project features a <b class="text-quote">modular object-oriented architecture</b>,
				supports both
				<b class="text-quote">database</b> and <b class="text-quote">CSV</b> storage modes, and includes
				<b class="text-quote">database views</b> for real-time statistics. It runs daily on a
				<b class="text-quote">VPS via Docker</b> with cron automation for continuous data collection.
			</p>
		</Project>
		<Project
			img={sociometroCapt}
			title="Basque Sociometer - Official Survey Data Analysis App"
			repoLink="https://github.com/dPenedo/sociometro-vasco"
			webLink1="/data/es/sociometro-vasco"
			webLink2="/data/eus/sociometro-vasco"
			webLinkTitle1="Application Link (Spanish)"
			webLinkTitle2="Application Link (Basque)"
		>
			<p>
				A data analysis application built on official periodic studies of the Basque population
				developed with <b class="text-quote">Python</b>, <b class="text-quote">Pandas</b> for data processing,
				and <b class="text-quote">Plotly</b> & <b class="text-quote">Streamlit</b> for interactive visualizations
				and deployment. Features interactive filtering by age, sex, social class, education level, and
				knowledge of the Basque language (<i>Euskera</i>).
			</p>
		</Project>

		<Project
			img={scrapingCapt}
			title="News Scraper — News Metadata Scraper for Sociological Research"
			repoLink="https://github.com/dPenedo/news_scraper"
		>
			<p>
				A Python-based web scraper that extracts news headlines, URLs, and metadata from major local
				news outlets in Mar del Plata. Runs daily as an <b class="text-quote">AWS Lambda</b> function
				and stores data in <b class="text-quote">S3</b> for further analysis.
			</p>
			<p>
				Built using <b class="text-quote">BeautifulSoup</b>, <b class="text-quote">Requests</b>, and
				<b class="text-quote">Python logging</b>. The project follows a <b class="text-quote"
					>class-based modular architecture</b
				> for maintainability and scalability.
			</p>
		</Project>

		<h2 class="title mb-4 text-xl"><span class="text-accent">##</span> AI & Automation Projects</h2>

		<Project
			img={cityBike}
			title="CityBike Rental - AI Customer Service Bot"
			webLink1="https://t.me/CityBikeRentalBot"
		>
			<p>
				An <b class="text-quote">AI customer service system</b> showcasing
				<b class="text-quote">conversational AI</b> capabilities for enterprise support. Integrates <b
					class="text-quote">DeepSeek LLM</b
				> with <b class="text-quote">Telegram Bot API</b>
				for natural language understanding and response generation.
			</p>
			<p>
				Implements <b class="text-quote">professional support workflows</b> including pricing inquiries,
				location services, technical troubleshooting, and human escalation protocols. Features <b
					class="text-quote">Docker deployment</b
				> on a <b class="text-quote">VPS</b> and
				<b class="text-quote">custom prompt engineering</b> for consistent, on-brand responses.
			</p>
		</Project>

		<h2 class="title mb-4 text-xl">
			<span class="text-accent">##</span> Professional Web Development
		</h2>

		<Project
			img={matafuegos}
			title="Matafuegos Mar del Plata - [Live Site]"
			webLink1="https://matafuegosmardelplata.com.ar"
		>
			<p>
				Complete rebuild of an existing fire safety company website with focus on <b
					class="text-quote">SEO optimization</b
				>, <b class="text-quote">performance improvements</b> and <b class="text-quote"
					>modern UX/UI</b
				>.
			</p>
			<p>
				Developed using <b class="text-quote">Astro framework</b> with <b class="text-quote"
					>React components</b
				> and <b class="text-quote">Tailwind CSS</b>, achieving <b class="text-quote"
					>90+ PageSpeed score</b
				> through optimized assets and efficient code structure.
			</p>
		</Project>
		<!--Escuela de columna-->
		<Project
			img={escuelaDeColumnaCapt}
			title="Escuela de Columna - [Live Site]"
			webLink1="https://escueladecolumna.com.ar/"
		>
			<p>
				A website created for a multidisciplinary team of healthcare professionals, including
				physiotherapists and doctors. This project was developed using the <b class="text-quote"
					>Next.js</b
				> framework for
				<b class="text-quote">React</b> and <b class="text-quote">Tailwind CSS</b>.
			</p>
		</Project>

		<!-- Albert -->
		<Project
			img={albertCapt}
			title="Albert Martin - [Live Site]"
			webLink1="https://albertmediador.com"
		>
			<p>
				A psychologist and mediator's Website. I also made the design, It's static and built with <b
					class="text-quote">Bootstrap</b
				>.
			</p>
		</Project>

		<h2 class="title mb-4 text-xl"><span class="text-accent">##</span> Full Stack Projects</h2>

		<!--Tienda de cerámica-->
		<Project
			img={tiendaCeramica}
			title="Ceramic Artisan E-Commerce Platform - Template/Showcase"
			repoLink="https://github.com/dPenedo/ceramic-ecommerce"
		>
			<p>
				An e-commerce platform designed for ceramic artisans, allowing them to showcase and sell
				unique, handcrafted pieces. The project was developed using <b class="text-quote">Django</b>
				as the backend framework, <b class="text-quote">Vanilla JavaScript</b> for dynamic interactions
				on the frontend, and <b class="text-quote">Tailwind CSS</b> for a modern, responsive design.
			</p>
		</Project>
		<!--ChronoScript-->
		<Project
			img={chronoscriptCapt}
			title="ChronoScript"
			repoLink="https://github.com/dPenedo/chronoscript"
			webLink1="https://chronoscript-react.netlify.app/"
			webLink2="https://chronoscript-js.netlify.app/"
			webLinkTitle1="Vanilla JS WebSite Link"
			webLinkTitle2="React TS Website Link"
		>
			<p>
				ChronoScript is a web application developed in two versions: one using <b class="text-quote"
					>Vanilla JavaScript</b
				>, HTML, and CSS, and the other with <b class="text-quote">React</b> and <b
					class="text-quote">TypeScript</b
				> using <b class="text-quote">Vite</b>. Both versions include three sections: Stopwatch,
				Countdown, and World-times (by consuming an API). They also utilize <b class="text-quote"
					>Jest</b
				> for testing.
			</p>
		</Project>

		<Project
			img={tuveterinariaCapt}
			title="tuVeterinaria - Django Ecommerce"
			repoLink="https://github.com/dPenedo/tuveterinaria"
		>
			<p>
				An ecommerce site built with Django Framework, featuring an SQLite database and user
				authentication. It was my final project for the UTN diploma on Django Full Stack
				development.
			</p>
		</Project>

		<Project
			img={aprovechappCapt}
			title="AprovechÁpp! - Spring WebApp"
			repoLink="https://github.com/dPenedo/aprovechapp"
		>
			<p>
				A Web App built with the Spring Framework. It was my final project for the UTN diploma on <b
					class="text-quote">Spring Boot</b
				> development.
			</p>
		</Project>

		<Project
			img={doggyCapt}
			title="Doggy - Django WebApp"
			repoLink="https://github.com/No-Country/c6-15-ft-python-/"
		>
			<p>
				An online dog boarding service. It's dynamic and built with Django Framework and <b
					class="text-quote">PostgreSQL</b
				>.
			</p>
		</Project>
		<Project
			img={todolistCapt}
			title="TodoList - Django + React WebApp"
			repoLink="https://github.com/dPenedo/drf-react-todolist"
		>
			<p>
				A full-stack To-Do List application built with <b class="text-quote"
					>Django Rest Framework (DRF)</b
				> and <b class="text-quote">React</b>
			</p>
		</Project>
		<!--Python-->
		<h2 class="title my-6 mt-8 text-xl">
			<span class="text-accent">##</span> Python Desktop Projects
		</h2>

		<Project
			img={pomodoroCapt}
			title="Pomodoro Desktop App"
			repoLink="https://github.com/dPenedo/pomodoro"
		>
			<p>
				A Pomodoro timer made in Python using the <b class="text-quote">TkInter</b> library.
			</p>
		</Project>

		<Project
			img={martzianosCapt}
			title="Martzianos War"
			repoLink="https://github.com/dPenedo/martzianos"
		>
			<p>
				A Space Invaders style game made with the <b class="text-quote">Pygame</b> library.
			</p>
		</Project>
	</div>
</section>
